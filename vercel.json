{
  "buildCommand": "pnpm build:vercel",
  "outputDirectory": "packages/website/dist",
  "devCommand": "cd packages/website && pnpm dev",
  "installCommand": "pnpm install",
  "framework": "astro",
  "rewrites": [
    {
      "source": "/playground/:path*",
      "destination": "/playground/index.html"
    }
  ],
  "headers": [
    {
      "source": "/(.*)",
      "headers": [
        {
          "key": "X-Content-Type-Options",
          "value": "nosniff"
        },
        {
          "key": "X-Frame-Options",
          "value": "DENY"
        },
        {
          "key": "X-XSS-Protection",
          "value": "1; mode=block"
        }
      ]
    },
    {
      "source": "/assets/(.*)",
      "headers": [
        {
          "key": "Cache-Control",
          "value": "public, max-age=31536000, immutable"
        }
      ]
    }
  ]
}

{
  "name": "@hovue/cli",
  "version": "0.0.2",
  "description": "CLI tool for Hovue icons",
  "type": "module",
  "bin": {
    "hovue": "./dist/cli.mjs"
  },
  "main": "./dist/cli.mjs",
  "types": "./dist/cli.d.ts",
  "files": [
    "dist"
  ],
  "keywords": [
    "hovue",
    "cli",
    "icons",
    "vue-icons"
  ],
  "author": "Hovue Contributors",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/hovue/hovue.git",
    "directory": "packages/cli"
  },
  "homepage": "https://hovue.xyz",
  "bugs": {
    "url": "https://github.com/hovue/hovue/issues"
  },
  "scripts": {
    "build": "tsup src/cli.ts --format esm --dts --outDir dist",
    "dev": "tsup src/cli.ts --format esm --watch",
    "typecheck": "tsc --noEmit",
    "lint": "echo 'No linting configured'",
    "clean": "rm -rf dist node_modules"
  },
  "dependencies": {
    "commander": "^11.1.0",
    "chalk": "^5.3.0",
    "fs-extra": "^11.2.0",
    "glob": "^10.3.10"
  },
  "devDependencies": {
    "@types/fs-extra": "^11.0.4",
    "@types/node": "^20.10.0",
    "tsup": "^8.0.1",
    "typescript": "^5.4.0"
  }
}

<script>
  function getIconCopyText(iconName) {
    return `import { ${iconName} } from '@hovue/icons'

<template>
  <${iconName} 
    :size="24"
    color="currentColor"
    animation="slide"
    :animation-duration="300"
  />
</template>`;
  }

  document.addEventListener('DOMContentLoaded', () => {
    const iconItems = document.querySelectorAll('.icon-item');
    const searchInput = document.getElementById('icon-search');
    const clearSearchBtn = document.getElementById('clear-search');
    const categoryFilters = document.querySelectorAll('.category-filter');
    const iconsGrid = document.getElementById('icons-grid');
    let currentCategory = 'all';
    let currentSearch = '';

    const noResults = document.createElement('div');
    noResults.className = 'no-results';
    noResults.style.display = 'none';
    noResults.innerHTML = '<h3>No icons found</h3><p>Try adjusting your search or filter</p>';
    iconsGrid.parentNode.insertBefore(noResults, iconsGrid.nextSibling);

    function filterIcons() {
      let visibleCount = 0;

      iconItems.forEach((item) => {
        const iconName = item.getAttribute('data-icon-name') || '';
        const category = item.getAttribute('data-category') || '';
        const matchesSearch =
          !currentSearch || iconName.toLowerCase().includes(currentSearch.toLowerCase());
        const matchesCategory = currentCategory === 'all' || category === currentCategory;

        if (matchesSearch && matchesCategory) {
          item.classList.remove('hidden');
          visibleCount++;
        } else {
          item.classList.add('hidden');
        }
      });

      if (visibleCount === 0) {
        noResults.style.display = 'block';
        iconsGrid.style.display = 'none';
      } else {
        noResults.style.display = 'none';
        iconsGrid.style.display = 'grid';
      }
    }

    if (searchInput) {
      searchInput.addEventListener('input', (e) => {
        currentSearch = e.target.value.trim();
        filterIcons();
        if (currentSearch) {
          clearSearchBtn.style.display = 'flex';
        } else {
          clearSearchBtn.style.display = 'none';
        }
      });
    }

    if (clearSearchBtn) {
      clearSearchBtn.addEventListener('click', () => {
        if (searchInput) {
          searchInput.value = '';
          currentSearch = '';
          clearSearchBtn.style.display = 'none';
          filterIcons();
        }
      });
    }

    categoryFilters.forEach((filter) => {
      filter.addEventListener('click', () => {
        categoryFilters.forEach((f) => f.classList.remove('active'));
        filter.classList.add('active');
        currentCategory = filter.getAttribute('data-category') || 'all';
        filterIcons();
      });
    });

    iconItems.forEach((item) => {
      const iconName = item.getAttribute('data-icon-name');
      if (iconName) {
        const copyText = getIconCopyText(iconName);
        item.setAttribute('data-copy-text', copyText);
      }
      item.addEventListener('click', async () => {
        const copyText = item.getAttribute('data-copy-text');
        if (!copyText) return;

        try {
          await navigator.clipboard.writeText(copyText);

          // Visual feedback
          item.classList.add('copied');

          // Remove the copied class after animation
          setTimeout(() => {
            item.classList.remove('copied');
          }, 2000);
        } catch (err) {
          console.error('Failed to copy:', err);
          // Fallback for older browsers
          const textArea = document.createElement('textarea');
          textArea.value = copyText;
          textArea.style.position = 'fixed';
          textArea.style.opacity = '0';
          document.body.appendChild(textArea);
          textArea.select();
          try {
            document.execCommand('copy');
            item.classList.add('copied');
            setTimeout(() => {
              item.classList.remove('copied');
            }, 2000);
          } catch (fallbackErr) {
            console.error('Fallback copy failed:', fallbackErr);
          }
          document.body.removeChild(textArea);
        }
      });
    });
  });
</script>

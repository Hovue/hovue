<section id="install" class="section install-section">
  <div class="section-header animate-on-scroll">
    <span class="section-label">Installation</span>
    <h2 class="section-title">Get started in seconds</h2>
    <p class="section-desc">
      Install via your favorite package manager and start using immediately.
    </p>
  </div>

  <div class="install-grid">
    <div class="install-card animate-on-scroll">
      <div class="install-card-header">
        <h4>
          <svg
            width="16"
            height="16"
            viewBox="0 0 24 24"
            fill="none"
            stroke="currentColor"
            stroke-width="2"
          >
            <path d="M4 17l6-6-6-6M12 19h8"></path>
          </svg>
          npm
        </h4>
        <button class="copy-btn" data-copy="npm install @hovue/icons">Copy</button>
      </div>
      <div class="install-card-body">npm install @hovue/icons</div>
    </div>

    <div class="install-card animate-on-scroll">
      <div class="install-card-header">
        <h4>
          <svg
            width="16"
            height="16"
            viewBox="0 0 24 24"
            fill="none"
            stroke="currentColor"
            stroke-width="2"
          >
            <path d="M4 17l6-6-6-6M12 19h8"></path>
          </svg>
          pnpm
        </h4>
        <button class="copy-btn" data-copy="pnpm add @hovue/icons">Copy</button>
      </div>
      <div class="install-card-body">pnpm add @hovue/icons</div>
    </div>

    <div class="install-card animate-on-scroll">
      <div class="install-card-header">
        <h4>
          <svg
            width="16"
            height="16"
            viewBox="0 0 24 24"
            fill="none"
            stroke="currentColor"
            stroke-width="2"
          >
            <path d="M4 17l6-6-6-6M12 19h8"></path>
          </svg>
          yarn
        </h4>
        <button class="copy-btn" data-copy="yarn add @hovue/icons">Copy</button>
      </div>
      <div class="install-card-body">yarn add @hovue/icons</div>
    </div>

    <div class="install-card animate-on-scroll">
      <div class="install-card-header">
        <h4>
          <svg
            width="16"
            height="16"
            viewBox="0 0 24 24"
            fill="none"
            stroke="currentColor"
            stroke-width="2"

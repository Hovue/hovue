---
import BaseLayout from './BaseLayout.astro';
import Navigation from '../components/Navigation.astro';
import Footer from '../components/Footer.astro';
import DocsNav from '../components/DocsNav.vue';

interface Props {
  title?: string;
  description?: string;
  prev?: { url: string; title: string };
  next?: { url: string; title: string };
}

const {
  title = 'Documentation - Hovue',
  description = 'Complete documentation for Hovue - animated Vue icons library.',
  prev,
  next,
} = Astro.props;
---

<BaseLayout title={title} description={description}>
  <Navigation />

  <!-- Mobile Docs Menu Button -->
  <button class="docs-mobile-menu-btn" id="docs-mobile-menu-btn" aria-label="Open documentation menu">
    <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
      <path d="M4 6h16M4 12h16M4 18h16"></path>
    </svg>
    <span>Menu</span>
  </button>

  <!-- Mobile Docs Sidebar Overlay -->
  <div class="docs-mobile-overlay" id="docs-mobile-overlay">
    <div class="docs-mobile-sidebar">
      <div class="docs-mobile-header">
        <span class="docs-mobile-title">Documentation</span>
        <button class="docs-mobile-close" id="docs-mobile-close" aria-label="Close menu">
          <svg width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
            <path d="M18 6L6 18M6 6l12 12"></path>
          </svg>
        </button>
      </div>
      <nav class="docs-mobile-nav">
        <h4>Getting Started</h4>
        <ul>
          <li><a href="/docs" class={Astro.url.pathname === '/docs' ? 'active' : ''}>Introduction</a></li>
          <li><a href="/docs/installation" class={Astro.url.pathname === '/docs/installation' ? 'active' : ''}>Installation</a></li>
          <li><a href="/docs/quick-start" class={Astro.url.pathname === '/docs/quick-start' ? 'active' : ''}>Quick Start</a></li>
          <li><a href="/docs/api" class={Astro.url.pathname === '/docs/api' ? 'active' : ''}>API Reference</a></li>
        </ul>
        <h4>Guides</h4>
        <ul>
          <li><a href="/docs/animations" class={Astro.url.pathname === '/docs/animations' ? 'active' : ''}>Animation Guide</a></li>
          <li><a href="/docs/examples" class={Astro.url.pathname === '/docs/examples' ? 'active' : ''}>Examples Gallery</a></li>
        </ul>
      </nav>
    </div>
  </div>

  <div style="padding-top: 80px; min-height: 100vh;">
    <div class="docs-container">
      <aside class="docs-sidebar-wrapper">
        <div class="docs-sidebar">
          <h4>Getting Started</h4>
          <ul class="docs-nav">
            <li>
              <a href="/docs" class={Astro.url.pathname === '/docs' ? 'active' : ''}>Introduction</a
              >
            </li>
            <li>
              <a
                href="/docs/installation"
                class={Astro.url.pathname === '/docs/installation' ? 'active' : ''}>Installation</a
              >
            </li>
            <li>
              <a
                href="/docs/quick-start"
                class={Astro.url.pathname === '/docs/quick-start' ? 'active' : ''}>Quick Start</a
              >
            </li>
            <li>
              <a href="/docs/api" class={Astro.url.pathname === '/docs/api' ? 'active' : ''}
                >API Reference</a
              >
            </li>
          </ul>

          <h4>Guides</h4>
          <ul class="docs-nav">
            <li>
              <a
                href="/docs/animations"
                class={Astro.url.pathname === '/docs/animations' ? 'active' : ''}>Animation Guide</a
              >
            </li>
            <li>
              <a
                href="/docs/examples"
                class={Astro.url.pathname === '/docs/examples' ? 'active' : ''}>Examples Gallery</a
              >
            </li>
          </ul>
        </div>
      </aside>

      <main class="docs-content">
        <slot />
        <DocsNav client:load prev={prev} next={next} />
      </main>
    </div>
  </div>

  <div class="docs-footer-spacer"></div>

  <Footer />
</BaseLayout>

<style is:global>
  .docs-container {
    max-width: 1280px;
    margin: 0 auto;
    display: grid;
    grid-template-columns: 280px 1fr;
    gap: var(--spacing-xl);
    padding: var(--spacing-xl);
    background: var(--bg-card);
    border: 1px solid var(--border);
    border-radius: var(--radius-xl);
    overflow: hidden;
    min-height: calc(100vh - 200px);
    align-items: start;
  }

  .docs-sidebar-wrapper {
    background: var(--bg-dark);
    border-right: 1px solid var(--border);
    align-self: stretch;
    position: relative;
    height: 100%;
    min-height: 100%;
    overflow: hidden;
  }

  .docs-sidebar {
    position: sticky;
    top: 100px;
    height: calc(100vh - 120px);
    max-height: calc(100vh - 120px);
    overflow-y: auto;
    overflow-x: hidden;
    padding: var(--spacing-xl);
    width: 100%;
    box-sizing: border-box;
    -webkit-overflow-scrolling: touch;
  }

  .docs-content {
    padding: var(--spacing-xl);
    overflow-y: auto;
    min-height: 100%;
  }

  .docs-footer-spacer {
    height: var(--spacing-3xl);
  }

  .docs-sidebar::-webkit-scrollbar {
    width: 6px;
  }

  .docs-sidebar::-webkit-scrollbar-track {
    background: transparent;
  }

  .docs-sidebar::-webkit-scrollbar-thumb {
    background: var(--border);
    border-radius: 3px;
  }

  .docs-sidebar::-webkit-scrollbar-thumb:hover {
    background: var(--border-hover);
  }

  .docs-sidebar h4 {
    font-size: 0.75rem;
    font-weight: 600;
    text-transform: uppercase;
    letter-spacing: 0.1em;
    color: var(--text-muted);
    margin-bottom: var(--spacing-md);
  }

  .docs-nav {
    list-style: none;
    margin-bottom: var(--spacing-xl);
  }

  .docs-nav li {
    margin-bottom: var(--spacing-xs);
  }

  .docs-nav a {
    display: block;
    padding: var(--spacing-sm) var(--spacing-md);
    color: var(--text-secondary);
    text-decoration: none;
    font-size: 0.875rem;
    border-radius: var(--radius-md);
    transition: all 0.2s;
  }

  .docs-nav a:hover,
  .docs-nav a.active {
    background: var(--bg-card);
    color: var(--text-primary);
  }

  .docs-nav a.active {
    border-left: 2px solid var(--primary);
    padding-left: calc(var(--spacing-md) - 2px);
    color: var(--primary);
    font-weight: 500;
  }

  .docs-content {
    padding: var(--spacing-xl);
    overflow-y: auto;
  }

  .docs-content h2 {
    font-size: 2rem;
    font-weight: 700;
    margin-bottom: var(--spacing-md);
    color: var(--text-primary);
  }

  .docs-content > p {
    color: var(--text-secondary);
    margin-bottom: var(--spacing-xl);
    font-size: 1rem;
    line-height: 1.7;
  }

  .docs-content h3 {
    font-size: 1.25rem;
    font-weight: 600;
    margin: var(--spacing-xl) 0 var(--spacing-md);
    color: var(--text-primary);
  }

  .docs-code {
    background: var(--bg-dark);
    border: 1px solid var(--border);
    border-radius: var(--radius-lg);
    padding: var(--spacing-lg);
    padding-top: calc(var(--spacing-lg) + 2.5rem); /* Extra padding for copy button */
    font-family: 'JetBrains Mono', monospace;
    font-size: 0.875rem;
    line-height: 1.7;
    overflow-x: auto;
    margin: var(--spacing-md) 0;
    position: relative;
  }

  .docs-code .copy-button,
  .example-code .copy-button {
    position: absolute;
    top: 0.75rem;
    right: 0.75rem;
    display: inline-flex;
    align-items: center;
    gap: 0.375rem;
    padding: 0.375rem 0.75rem;
    background: var(--bg-card);
    border: 1px solid var(--border);
    border-radius: var(--radius-sm);
    color: var(--text-secondary);
    font-size: 0.75rem;
    font-weight: 500;
    cursor: pointer;
    transition: all 0.2s ease;
    font-family: inherit;
    z-index: 10;
  }

  .docs-code .copy-button:hover,
  .example-code .copy-button:hover {
    background: var(--bg-dark);
    border-color: var(--primary);
    color: var(--text-primary);
  }

  .docs-code .copy-button.copied,
  .example-code .copy-button.copied {
    background: var(--primary);
    border-color: var(--primary);
    color: white;
  }

  .docs-code .copy-button svg,
  .example-code .copy-button svg {
    width: 16px;
    height: 16px;
    flex-shrink: 0;
  }

  .docs-code .copy-button span,
  .example-code .copy-button span {
    font-size: 0.75rem;
  }


  .docs-content h1 {
    font-size: 2rem;
    font-weight: 700;
    margin-bottom: var(--spacing-md);
    color: var(--text-primary);
  }

  .docs-content h4 {
    font-size: 1.25rem;
    font-weight: 600;
    margin: var(--spacing-xl) 0 var(--spacing-md);
    color: var(--text-primary);
  }

  .docs-content p {
    color: var(--text-secondary);
    margin-bottom: var(--spacing-xl);
    font-size: 1rem;
    line-height: 1.7;
  }

  .docs-content a {
    color: var(--primary);
    text-decoration: none;
    border-bottom: 1px solid transparent;
    transition: all 0.2s;
  }

  .docs-content a:hover {
    color: var(--primary-hover);
    border-bottom-color: var(--primary-hover);
  }

  .docs-content code {
    background: var(--bg-card);
    border: 1px solid var(--border);
    border-radius: var(--radius-sm);
    padding: 0.125rem 0.375rem;
    font-family: 'JetBrains Mono', 'Fira Code', 'Consolas', monospace;
    font-size: 0.875em;
    color: var(--primary);
    font-weight: 500;
  }

  .docs-content ul,
  .docs-content ol {
    color: var(--text-secondary);
    margin-bottom: var(--spacing-lg);
    padding-left: var(--spacing-xl);
    line-height: 1.7;
  }

  .docs-content ul {
    list-style-type: disc;
  }

  .docs-content ol {
    list-style-type: decimal;
  }

  .docs-content li {
    margin-bottom: var(--spacing-sm);
  }

  .docs-content li code {
    font-size: 0.8125em;
  }

  .docs-content strong {
    font-weight: 600;
    color: var(--text-primary);
  }

  .docs-note {
    background: rgba(49, 151, 149, 0.1);
    border-left: 4px solid var(--primary);
    border-radius: var(--radius-md);
    padding: var(--spacing-lg);
    margin-top: var(--spacing-xl);
    margin-bottom: var(--spacing-xl);
    margin-left: 0;
    margin-right: 0;
    color: var(--text-secondary);
    display: block;
  }

  .docs-note p {
    margin-bottom: 0;
  }

  .docs-note strong {
    color: var(--primary);
    display: block;
    margin-bottom: var(--spacing-xs);
    font-weight: 600;
  }

  .docs-warning {
    background: rgba(237, 137, 54, 0.1);
    border-left: 4px solid var(--orange);
    border-radius: var(--radius-md);
    padding: var(--spacing-lg);
    margin: var(--spacing-xl) 0;
    color: var(--text-secondary);
  }

  .docs-warning strong {
    color: var(--orange);
    display: block;
    margin-bottom: var(--spacing-xs);
    font-weight: 600;
  }

  :global(.dark) .docs-note {
    background: rgba(49, 151, 149, 0.15);
  }

  :global(.dark) .docs-warning {
    background: rgba(237, 137, 54, 0.15);
  }

  .docs-mobile-menu-btn {
    display: none;
    position: fixed;
    bottom: var(--spacing-xl);
    right: var(--spacing-xl);
    z-index: 90;
    padding: var(--spacing-sm) var(--spacing-lg);
    background: var(--primary);
    color: white;
    border: none;
    border-radius: 9999px;
    font-weight: 600;
    font-size: 0.875rem;
    cursor: pointer;
    align-items: center;
    gap: var(--spacing-sm);
    box-shadow: 0 4px 12px rgba(49, 151, 149, 0.4);
    transition: all 0.2s ease;
  }

  .docs-mobile-menu-btn:hover {
    transform: translateY(-2px);
    box-shadow: 0 6px 16px rgba(49, 151, 149, 0.5);
  }

  .docs-mobile-overlay {
    display: none;
    position: fixed;
    inset: 0;
    background: rgba(0, 0, 0, 0.5);
    backdrop-filter: blur(4px);
    z-index: 200;
    opacity: 0;
    visibility: hidden;
    transition: all 0.3s ease;
  }

  .docs-mobile-overlay.active {
    opacity: 1;
    visibility: visible;
  }

  .docs-mobile-sidebar {
    position: absolute;
    top: 0;
    left: 0;
    width: 300px;
    max-width: 85vw;
    height: 100%;
    background: var(--bg-dark);
    border-right: 1px solid var(--border);
    display: flex;
    flex-direction: column;
    transform: translateX(-100%);
    transition: transform 0.3s ease;
  }

  .docs-mobile-overlay.active .docs-mobile-sidebar {
    transform: translateX(0);
  }

  .docs-mobile-header {
    display: flex;
    align-items: center;
    justify-content: space-between;
    padding: var(--spacing-md) var(--spacing-lg);
    border-bottom: 1px solid var(--border);
  }

  .docs-mobile-title {
    font-weight: 700;
    font-size: 1.125rem;
    color: var(--text-primary);
  }

  .docs-mobile-close {
    width: 40px;
    height: 40px;
    padding: 0;
    background: transparent;
    border: 1px solid var(--border);
    border-radius: var(--radius-md);
    color: var(--text-secondary);
    cursor: pointer;
    display: flex;
    align-items: center;
    justify-content: center;
    transition: all 0.2s ease;
  }

  .docs-mobile-close:hover {
    border-color: var(--primary);
    color: var(--text-primary);
  }

  .docs-mobile-nav {
    flex: 1;
    overflow-y: auto;
    padding: var(--spacing-lg);
  }

  .docs-mobile-nav h4 {
    font-size: 0.75rem;
    font-weight: 600;
    text-transform: uppercase;
    letter-spacing: 0.1em;
    color: var(--text-muted);
    margin-bottom: var(--spacing-md);
    margin-top: var(--spacing-lg);
  }

  .docs-mobile-nav h4:first-child {
    margin-top: 0;
  }

  .docs-mobile-nav ul {
    list-style: none;
  }

  .docs-mobile-nav li {
    margin-bottom: var(--spacing-xs);
  }

  .docs-mobile-nav a {
    display: block;
    padding: var(--spacing-sm) var(--spacing-md);
    color: var(--text-secondary);
    text-decoration: none;
    font-size: 0.9375rem;
    border-radius: var(--radius-md);
    transition: all 0.2s ease;
  }

  .docs-mobile-nav a:hover,
  .docs-mobile-nav a.active {
    background: var(--bg-card);
    color: var(--text-primary);
  }

  .docs-mobile-nav a.active {
    border-left: 2px solid var(--primary);
    padding-left: calc(var(--spacing-md) - 2px);
    color: var(--primary);
    font-weight: 500;
  }

  @media (max-width: 1024px) {
    .docs-container {
      grid-template-columns: 1fr;
      padding: var(--spacing-md);
    }

    .docs-sidebar-wrapper {
      display: none;
    }

    .docs-mobile-menu-btn {
      display: flex;
    }

    .docs-mobile-overlay {
      display: block;
    }

    .docs-content {
      padding: var(--spacing-lg);
    }

    .docs-content h1 {
      font-size: 2rem;
    }

    .docs-content h2 {
      font-size: 1.75rem;
    }

    .docs-content h3 {
      font-size: 1.25rem;
    }
  }

  @media (max-width: 640px) {
    .docs-container {
      padding: var(--spacing-sm);
    }

    .docs-content {
      padding: var(--spacing-md);
    }

    .docs-code {
      padding: var(--spacing-md);
      font-size: 0.8125rem;
    }
  }
</style>

<script is:inline>
  (function () {
    if (document.body) {
      document.body.style.opacity = '1';
    }

    document.addEventListener('click', (e) => {
      const link = e.target.closest('a[href^="/docs"]');
      if (!link) return;

      const href = link.getAttribute('href');
      if (!href || href.startsWith('#') || link.hasAttribute('download')) return;
    });
  })();
  document.addEventListener('DOMContentLoaded', () => {
    const menuBtn = document.getElementById('docs-mobile-menu-btn');
    const closeBtn = document.getElementById('docs-mobile-close');
    const overlay = document.getElementById('docs-mobile-overlay');

    function openDocsSidebar() {
      overlay?.classList.add('active');
      document.body.style.overflow = 'hidden';
    }

    function closeDocsSidebar() {
      overlay?.classList.remove('active');
      document.body.style.overflow = '';
    }

    menuBtn?.addEventListener('click', openDocsSidebar);
    closeBtn?.addEventListener('click', closeDocsSidebar);

    overlay?.addEventListener('click', (e) => {
      if (e.target === overlay) {
        closeDocsSidebar();
      }
    });

    overlay?.querySelectorAll('a').forEach(link => {
      link.addEventListener('click', closeDocsSidebar);
    });
    document.addEventListener('keydown', (e) => {
      if (e.key === 'Escape' && overlay?.classList.contains('active')) {
        closeDocsSidebar();
      }
    });
  });

  document.addEventListener('DOMContentLoaded', () => {
    const codeBlocks = document.querySelectorAll('.docs-code:not(.has-copy-button), .example-code:not(.has-copy-button)');

    codeBlocks.forEach((block) => {
      block.classList.add('has-copy-button');

      const extractText = (element) => {
        const clone = element.cloneNode(true);

        clone.querySelectorAll('br').forEach(br => {
          br.replaceWith('\n');
        });

        let text = clone.textContent || '';

        const textarea = document.createElement('textarea');
        textarea.innerHTML = text;
        text = textarea.value;

        return text
          .replace(/\u00A0/g, ' ')
          .replace(/[ \t]+/g, ' ')
          .replace(/\n\s*\n\s*\n/g, '\n\n')
          .trim();
      };

      const codeText = extractText(block);
      const copyButton = document.createElement('button');
      copyButton.className = 'copy-button';
      copyButton.setAttribute('aria-label', 'Copy code');
      copyButton.setAttribute('title', 'Copy code');
      copyButton.innerHTML = `
        <svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
          <rect x="9" y="9" width="13" height="13" rx="2" ry="2"></rect>
          <path d="M5 15H4a2 2 0 0 1-2-2V4a2 2 0 0 1 2-2h9a2 2 0 0 1 2 2v1"></path>
        </svg>
        <span>Copy</span>
      `;

      copyButton.addEventListener('click', async () => {
        try {
          await navigator.clipboard.writeText(codeText);
          copyButton.innerHTML = `
            <svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
              <polyline points="20 6 9 17 4 12"></polyline>
            </svg>
            <span>Copied</span>
          `;
          copyButton.classList.add('copied');
          copyButton.setAttribute('aria-label', 'Copied!');
          copyButton.setAttribute('title', 'Copied!');
          setTimeout(() => {
            copyButton.innerHTML = `
              <svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                <rect x="9" y="9" width="13" height="13" rx="2" ry="2"></rect>
                <path d="M5 15H4a2 2 0 0 1-2-2V4a2 2 0 0 1 2-2h9a2 2 0 0 1 2 2v1"></path>
              </svg>
              <span>Copy</span>
            `;
            copyButton.classList.remove('copied');
            copyButton.setAttribute('aria-label', 'Copy code');
            copyButton.setAttribute('title', 'Copy code');
          }, 2000);
        } catch (err) {
          console.error('Failed to copy:', err);
        }
      });

      block.appendChild(copyButton);
    });
  });
</script>


  <div class="stats">
    <div class="stat-item">
      <h4>100+</h4>
      <p>Animated Icons</p>
    </div>
    <div class="stat-item">
      <h4>5+</h4>
      <p>Animation Variants</p>
    </div>
    <div class="stat-item">
      <h4>&lt;2kb</h4>
      <p>Per Icon (gzipped)</p>
    </div>
    <div class="stat-item">
      <h4>100%</h4>
      <p>TypeScript</p>
    </div>
